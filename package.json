{
  "name": "vibe-validate",
  "type": "module",
  "private": true,
  "description": "Git-aware validation orchestration for vibe coding (LLM-assisted development)",
  "keywords": [
    "validation",
    "git",
    "cache",
    "llm",
    "ai",
    "agent",
    "typescript",
    "testing",
    "ci",
    "pre-commit"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/vibe-validate.git"
  },
  "bugs": {
    "url": "https://github.com/jdutton/vibe-validate/issues"
  },
  "homepage": "https://github.com/jdutton/vibe-validate#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "find packages -name '*.tsbuildinfo' -delete && pnpm -r build",
    "build:clean": "pnpm -r clean && pnpm build",
    "test": "node packages/cli/dist/bin/vv run \"vitest run\"",
    "test:watch": "vitest",
    "test:coverage": "node packages/cli/dist/bin/vv run \"vitest run --coverage\"",
    "test:system": "node packages/cli/dist/bin/vv run \"vitest run --config vitest.config.system.ts\"",
    "test:system:watch": "vitest --config vitest.config.system.ts",
    "run": "node packages/cli/dist/bin/vv run",
    "lint": "node packages/cli/dist/bin/vv run \"eslint --max-warnings=0 \\\"packages/**/*.ts\\\" \\\"tools/**/*.js\\\"\"",
    "typecheck": "node packages/cli/dist/bin/vv run \"pnpm -r typecheck\"",
    "duplication-check": "node tools/duplication-check.js",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "validate": "node packages/cli/dist/bin/vv validate",
    "pre-commit": "node packages/cli/dist/bin/vv pre-commit",
    "state": "node packages/cli/dist/bin/vv state",
    "history": "node packages/cli/dist/bin/vv history",
    "cleanup": "node packages/cli/dist/bin/vv cleanup",
    "sync-check": "node packages/cli/dist/bin/vv sync-check",
    "watch-pr": "node packages/cli/dist/bin/vv watch-pr",
    "generate-workflow": "node packages/cli/dist/bin/vv generate-workflow",
    "generate-cli-docs": "node tools/generate-cli-docs.js",
    "bump-version": "node tools/bump-version.js",
    "pre-publish": "node tools/pre-publish-check.js",
    "verify-npm-packages": "node tools/verify-npm-packages.js",
    "publish:dry-run": "pnpm -r --filter='@vibe-validate/*' exec npm publish --dry-run",
    "publish:all": "node tools/publish-all.js \"$@\"",
    "version:patch": "node tools/bump-version.js patch",
    "version:minor": "node tools/bump-version.js minor",
    "version:major": "node tools/bump-version.js major",
    "release:patch": "npm run version:patch && npm run build && git add -A && git commit -m 'chore: Release patch version' && npm run tag:create",
    "release:minor": "npm run version:minor && npm run build && git add -A && git commit -m 'chore: Release minor version' && npm run tag:create",
    "release:major": "npm run version:major && npm run build && git add -A && git commit -m 'chore: Release major version' && npm run tag:create",
    "tag:create": "node -e \"const pkg = require('./packages/cli/package.json'); const tag = 'v' + pkg.version; require('child_process').execSync('git tag -a ' + tag + ' -m \\\"Release ' + tag + '\\\"', {stdio: 'inherit'});\"",
    "debug:windows": "tsx tools/debug-windows.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "isolated-vm": "^6.0.2",
    "jscpd": "^4.0.5",
    "secretlint": "^11.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
