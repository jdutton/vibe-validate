{
  "name": "vibe-validate",
  "version": "0.19.0-rc.3",
  "type": "module",
  "private": true,
  "description": "Git-aware validation orchestration for vibe coding (LLM-assisted development)",
  "keywords": [
    "validation",
    "git",
    "cache",
    "llm",
    "ai",
    "agent",
    "typescript",
    "testing",
    "ci",
    "pre-commit"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/vibe-validate.git"
  },
  "bugs": {
    "url": "https://github.com/jdutton/vibe-validate/issues"
  },
  "homepage": "https://github.com/jdutton/vibe-validate#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean && pnpm build",
    "test": "turbo run test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:system": "turbo run test -- --config vitest.config.system.ts",
    "test:system:watch": "vitest --config vitest.config.system.ts",
    "run": "node packages/cli/dist/bin/vv run",
    "lint": "eslint --max-warnings=0 \"packages/**/*.ts\"",
    "typecheck": "turbo run typecheck",
    "duplication-check": "tsx packages/dev-tools/src/duplication-check.ts",
    "jscpd-update-baseline": "tsx packages/dev-tools/src/jscpd-update-baseline.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "validate": "node packages/cli/dist/bin/vv validate",
    "pre-commit": "node packages/cli/dist/bin/vv pre-commit",
    "state": "node packages/cli/dist/bin/vv state",
    "history": "node packages/cli/dist/bin/vv history",
    "cleanup": "node packages/cli/dist/bin/vv cleanup",
    "sync-check": "node packages/cli/dist/bin/vv sync-check",
    "watch-pr": "node packages/cli/dist/bin/vv watch-pr",
    "generate-workflow": "node packages/cli/dist/bin/vv generate-workflow",
    "generate-cli-docs": "tsx packages/dev-tools/src/generate-cli-docs.ts",
    "bump-version": "tsx packages/dev-tools/src/bump-version.ts",
    "pre-publish": "tsx packages/dev-tools/src/pre-publish-check.ts",
    "verify-npm-packages": "tsx packages/dev-tools/src/verify-npm-packages.ts",
    "publish:dry-run": "pnpm -r --filter='@vibe-validate/*' exec npm publish --dry-run",
    "publish:all": "tsx packages/dev-tools/src/publish-all.ts \"$@\"",
    "version:patch": "tsx packages/dev-tools/src/bump-version.ts patch",
    "version:minor": "tsx packages/dev-tools/src/bump-version.ts minor",
    "version:major": "tsx packages/dev-tools/src/bump-version.ts major",
    "release:patch": "npm run version:patch && npm run build && git add -A && git commit -m 'chore: Release patch version' && npm run tag:create",
    "release:minor": "npm run version:minor && npm run build && git add -A && git commit -m 'chore: Release minor version' && npm run tag:create",
    "release:major": "npm run version:major && npm run build && git add -A && git commit -m 'chore: Release major version' && npm run tag:create",
    "tag:create": "node -e \"const pkg = require('./packages/cli/package.json'); const tag = 'v' + pkg.version; require('child_process').execSync('git tag -a ' + tag + ' -m \\\"Release ' + tag + '\\\"', {stdio: 'inherit'});\"",
    "debug:windows": "tsx packages/dev-tools/src/debug-windows.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "isolated-vm": "^6.0.2",
    "jscpd": "^4.0.5",
    "secretlint": "^11.2.5",
    "semver": "^7.7.3",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.1.3",
    "vitest": "^3.2.4",
    "which": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
