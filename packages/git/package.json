  },
  "dependencies": {
    "@vibe-validate/utils": "workspace:*",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
