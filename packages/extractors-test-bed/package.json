{
  "name": "@vibe-validate/extractors-test-bed",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted test bed for validating @vibe-validate/extractors across multiple test frameworks and output formats",
  "type": "module",
  "scripts": {
    "test:jest": "jest",
    "test:jest:junit": "JEST_JUNIT_OUTPUT_DIR=./junit-output jest --reporters=default --reporters=jest-junit",
    "test:vitest": "vitest run",
    "test:vitest:junit": "vitest run --reporter=junit --reporter=default",
    "test:mocha": "mocha 'tests/mocha/**/*.test.js'",
    "test:mocha:junit": "mocha 'tests/mocha/**/*.test.js' --reporter mocha-junit-reporter --reporter-options mochaFile=./junit-output/mocha-results.xml",
    "capture:all": "bash scripts/capture-samples.sh",
    "capture:jest:text": "npm run test:jest 2>&1 | tee ../extractors/test/samples/jest/extraction-test-bed.txt || true",
    "capture:jest:junit": "npm run test:jest:junit && cp junit-output/junit.xml ../extractors/test/samples/jest/extraction-test-bed.junit.xml || true",
    "capture:vitest:text": "npm run test:vitest 2>&1 | tee ../extractors/test/samples/vitest/extraction-test-bed.txt || true",
    "capture:vitest:junit": "npm run test:vitest:junit && cp junit-output/vitest-results.xml ../extractors/test/samples/vitest/extraction-test-bed.junit.xml || true",
    "capture:mocha:text": "npm run test:mocha 2>&1 | tee ../extractors/test/samples/mocha/extraction-test-bed.txt || true",
    "capture:mocha:junit": "npm run test:mocha:junit && cp junit-output/mocha-results.xml ../extractors/test/samples/mocha/extraction-test-bed.junit.xml || true"
  },
  "dependencies": {
    "@vibe-validate/config": "workspace:*",
    "@vibe-validate/core": "workspace:*",
    "@vibe-validate/extractors": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/tape": "^5.8.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "tape": "^5.9.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
