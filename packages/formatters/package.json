{
  "name": "@vibe-validate/formatters",
  "version": "0.11.0",
  "description": "LLM-optimized error formatters for validation output",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:report": "vitest run && node test/generate-quality-report.js",
    "test:regression": "node test/check-regressions.js"
  },
  "keywords": [
    "validation",
    "error-formatting",
    "llm-friendly",
    "typescript",
    "eslint",
    "vitest",
    "openapi"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/vibe-validate.git",
    "directory": "packages/formatters"
  },
  "dependencies": {
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
