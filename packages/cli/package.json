{
  "name": "@vibe-validate/cli",
  "version": "0.11.0",
  "description": "Command-line interface for vibe-validate validation framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vibe-validate": "./dist/bin.js",
    "vv": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "watch-pr-result.schema.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && node dist/scripts/generate-watch-pr-schema.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0"
  },
  "keywords": [
    "validation",
    "testing",
    "ci-cd",
    "git",
    "caching",
    "pre-commit",
    "typescript",
    "javascript",
    "ai-agent-friendly",
    "claude-code",
    "cursor",
    "aider",
    "developer-experience",
    "developer-tools",
    "automation",
    "workflow",
    "llm",
    "cli"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/vibe-validate.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vibe-validate/config": "workspace:*",
    "@vibe-validate/core": "workspace:*",
    "@vibe-validate/git": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "typescript": "^5.5.2",
    "vitest": "^2.0.5"
  }
}
