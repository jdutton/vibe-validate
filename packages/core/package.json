{
  "name": "@vibe-validate/core",
  "version": "0.14.1",
  "description": "Core validation orchestration engine for vibe-validate",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "validation-result.schema.json"
  ],
  "scripts": {
    "build": "tsc && node dist/scripts/generate-result-schema.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo validation-result.schema.json"
  },
  "keywords": [
    "validation",
    "parallel",
    "orchestration",
    "git",
    "cache"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdutton/vibe-validate.git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vibe-validate/extractors": "workspace:*",
    "@vibe-validate/git": "workspace:*",
    "strip-ansi": "^7.1.2",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
