                            "confidence": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "completeness": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "issues": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "suggestions": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
